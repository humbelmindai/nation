{
  "name": "420-nation-platform",
  "version": "1.0.0-alpha",
  "description": "The premier integrated cannabis wellness platform connecting consumers, dispensaries, healthcare professionals, and community",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "nodemon --exec node --loader ts-node/esm src/api/server.ts",
    "dev:client": "next dev",
    "build": "npm run build:api && npm run build:client",
    "build:api": "tsc -p tsconfig.api.json",
    "build:client": "next build",
    "start": "node server.js",
    "start:api": "node dist/api/server.js",
    "start:client": "next start",
    "lint": "next lint && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "next lint --fix && eslint 'src/**/*.{ts,tsx}' --fix",
    "type-check": "tsc --noEmit && tsc -p tsconfig.api.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:changed": "jest -o",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "tsx src/database/seeds/index.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "security": "npm audit && npm run security:secrets && npm run security:deps",
    "security:secrets": "trufflehog filesystem . --fail",
    "security:deps": "audit-ci --moderate",
    "security:sast": "semgrep --config=auto --error",
    "performance": "artillery run tests/performance/load-test.yml",
    "build:docker": "docker build -t 420nation/platform .",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "deploy:staging": "npm run build && npm run test && ./scripts/deploy-staging.sh",
    "deploy:prod": "npm run build && npm run test && ./scripts/deploy-production.sh",
    "prepare": "husky install",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "cannabis",
    "dispensary",
    "marketplace",
    "healthcare",
    "compliance",
    "nextjs",
    "nodejs",
    "typescript",
    "mariadb"
  ],
  "author": {
    "name": "420 Nation Team",
    "email": "dev@420nation.com",
    "url": "https://420nation.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/420nation/platform.git"
  },
  "bugs": {
    "url": "https://github.com/420nation/platform/issues"
  },
  "homepage": "https://420nation.com",
  "dependencies": {
    "@next/bundle-analyzer": "^14.2.5",
    "@prisma/client": "^5.16.1",
    "@stripe/stripe-js": "^4.1.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.408.0",
    "morgan": "^1.10.0",
    "next": "^14.2.5",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-query": "^3.39.3",
    "redis": "^4.7.0",
    "stripe": "^16.1.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.13.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.9.0",
    "eslint-config-next": "^14.2.5",
    "@playwright/test": "^1.45.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "artillery": "^2.0.15",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^5.16.1",
    "semgrep": "^1.80.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.6",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "prisma": {
    "schema": "src/database/schema.prisma"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.3"
    }
  }
}